<h2>All Books</h2>
<% if !!current_user %>
  <%= button_to "Add a book", new_book_path, method: :get %>
<% end %>
<ul>
  <% @books.each do |book| %>
    <li>
      <h3><%= link_to book.title, book_path(book) %></h3>
      by <%= link_to book.author.name, author_path(book.author) %>
       ~ <%= link_to book.genre.name, genre_path(book.genre) %>
   </li>
  <% end %>
</ul>
