<div class="welcome">
  <% if !!current_user %>
    <h1>Welcome, <%= current_user.username %>!</h1>

  <% else %>
    <h1>Welcome to eWorm!</h1>
    <h2>
      <%= link_to "Create an account", new_user_registration_path %> or
      <%= link_to "Sign in", new_user_session_path %> to get started now.
    </h2>
  <% end %>
</div>

<div class="stats">
  <h3>We have <%= @num_reviews %> reviews by <%= @num_users %> users on <%= @num_books %> books and counting!</h3>
</div>

<div class="reviews">
  <h3>Recent Reviews</h3>
  <% @reviews.each do |review| %>
    <%= render partial: 'reviews/review', locals: {review: review} %>
  <% end %>
</div>
