<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@review.errors.count, "error") %>
      prohibited this review from being saved:
    </h2>

    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @review do |f| %>
  <%= "Review for #{@book.title}" %><br>
  <%= f.label :rating %>
  <%= f.select :rating, [1,2,3,4,5] %><br>
  <%= f.text_area :content, required: true, size: "50x20" %><br>
  <%= f.hidden_field :book_id, value: @book.id %>

  <%= f.submit %>
<% end %>
<br>
<%= button_to 'Cancel', book_path(@book), method: :get %>
